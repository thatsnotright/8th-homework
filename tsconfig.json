{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2019"],
    "baseUrl": "./src",
    "rootDir": "./src",
    "pretty": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "strict": true
  },
  "include": ["./src/**/*"]
}
